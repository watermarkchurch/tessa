{
  "dependencyDashboard": true,
  "dependencyDashboardApproval": true,
  "enabledManagers": [
    "circleci",
    "dockerfile",
    "ruby-version"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "prHourlyLimit": 0,
  "ruby": {
    "major": {
      "enabled": false
    }
  },
  "packageRules": [
    {
      "matchPackagePatterns": [".*ruby.*"],
      "matchFiles": [
        ".ruby-version",
        ".circleci/config.yml",
        "Dockerfile"
      ],
      "groupName": "ruby lang"
    }
  ]
}
