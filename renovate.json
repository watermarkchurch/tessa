{
  "extends": [
    "config:base",
    ":preserveSemverRanges"
  ],
  "dependencyDashboard": true,
  "major": {
    "dependencyDashboardApproval": true,
    "ignoreDeps": ["ruby"]
  },
  "enabledManagers": [
    "bundler",
    "circleci",
    "dockerfile",
    "ruby-version"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": "^ruby.+",
      "groupName": ["ruby lang"]
    }
  ]
}
