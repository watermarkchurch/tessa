{
  "dependencyDashboard": true,
  "dependencyDashboardApproval": true,
  "additionalBranchPrefix": "r-",
  "enabledManagers": [
    "bundler",
    "circleci",
    "dockerfile",
    "ruby-version"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "ruby": {
    "major": {
      "enabled": false
    }
  },
  "docker": {
    "additionalBranchPrefix": "r-"
  },
  "packageRules": [
    {
      "matchPackagePatterns": [".*ruby.*"],
      "groupName": "ruby lang"
    },
    {
      "matchManagers": ["bundler"],
      "matchPackagePatterns": [".*[^ruby].*"],
      "enabled": false
    }
  ]
}
